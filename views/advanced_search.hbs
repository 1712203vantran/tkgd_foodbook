<!-- checkout page -->
<div id="advanced_search_wrapper" class="privacy py-sm-3 py-4">
    <div class="container py-xl-4 py-lg-2">
        <!-- tittle heading -->
        <h3 class="tittle-w3l text-center mb-lg-1 mb-sm-4 mb-3">
            <span>T</span>ìm kiếm nâng cao
        </h3>
        <!-- //tittle heading -->
        <div class="advanced_search_content mt-3">
            <div class="address_form_agile">
                <div id="advancedSearchForm" class="creditly-card-form agileinfo_form">
                    <div class="creditly-wrapper wthree, w3_agileits_wrapper">
                        <div class="information-wrapper">
                            <div class="first-row">
                                <div class="form-group">
                                    <label for="search_keyword" class="">Từ khóa <span style="color: red">*</span></label>
                                    <div class="form-inline input-group mb-2">
                                        <div class="input-group-prepend">
                                            <button id="advanced-search-type-btn" class="btn search-type-display btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Món ăn </button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item search-type-option" data-search-type-title="Món ăn" data-search-type="dishName">Món ăn</a>
                                                <a class="dropdown-item search-type-option" data-search-type-title="Nguyên liệu" data-search-type="ingredientName">Nguyên liệu</a>
                                                <a class="dropdown-item search-type-option" data-search-type-title="Dinh dưỡng" data-search-type="nutritionName">Dinh dưỡng</a>
                                            </div>
                                        </div>
                                        <input type="text" class="form-control search-keyword" name="dishName" placeholder="Tìm kiếm món ăn" aria-label="search" aria-describedby="search dishes">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label for="dishType">
                                        Loại món ăn <span style="color: red">*</span>
                                    </label>
                                    <select class="form-control" id="dishType" name="dishTypes" multiple style="padding: 0 5px;">
                                        {{# each dishTypes}}
                                            <option value="{{inc index}}">{{name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label for="cuisineType">
                                        Ẩm thực <span style="color: red">*</span>
                                    </label>
                                    <select class="form-control" id="cuisineType" name="cuisines" multiple style="padding: 0 5px;">
                                        {{# each cuisines}}
                                            <option value="{{inc index}}">{{name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label for="dietType">
                                        Chế độ ăn <span style="color: red">*</span>
                                    </label>
                                    <select class="form-control" id="dietType" name="diets" multiple style="padding: 0 5px;">
                                        <option value="-1">Không thuộc chế độ nào</option>
                                        {{# each diets}}
                                            <option value="{{inc index}}">{{name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <button type="submit" id="advanced-search-btn" class="submit check_out btn">Tìm kiếm</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- //checkout page -->
